<%= form_with(model: [@image_category, @image], class: "contents") do |form| %>
  <% if image.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= t('activerecord.errors.template.header', count: @image.errors.count, model: @image.model_name.human) %></h2>

      <ul>
        <% image.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p class="my-5">
    <%= image_tag image.image, class: "object-scale-down h-48 w-96" if image.image.attached? %>
  </p>

  <div class="my-5">
    <% if @image.id %>
      <%= form.label :image %>
      <%= form.file_field :image, required: true %>
    <% else %>
      <%= form.label :images %>
      <%= form.file_field :images, multiple: true, required: true %>
    <% end %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-fit text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg px-3 py-2" %>
  </div>
<% end %>
