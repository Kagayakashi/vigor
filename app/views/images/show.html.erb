<section class="flex flex-col gap-2">

  <%= image_tag @image.image, alt: @image.image.filename.to_s,
    class: "object-scale-down w-fit max-w-full p-2" if @image.image.attached? %>

  <% if action_name == "show" && @image_category.images.count > 1 %>
    <% prev_image = @image_category.images.where("id < ?", @image.id).last %>
    <% next_image = @image_category.images.where("id > ?", @image.id).first %>

    <div class="image-navigation">
      <% if prev_image %>
        <%= link_to "Previous", image_category_image_path(@image_category, prev_image) %>
      <% end %>

      <% if next_image %>
        <%= link_to "Next", image_category_image_path(@image_category, next_image) %>
      <% end %>
    </div>
  <% end %>

  <div class="flex flex-col gap-1 py-2">
    <div class="flex gap-2 py-2">
      <%= link_to t("images.edit"), edit_image_category_image_path(@image_category, @image),
        class: "text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg px-3 py-2" %>

      <%= button_to t("images.delete"), image_category_image_path(@image_category, @image), method: :delete,
        class: "text-white bg-red-700 hover:bg-red-800 font-medium rounded-lg px-3 py-2" %>
    </div>

    <%= link_to @image_category.name, image_category_images_path, class: "inline-block w-fit border border-gray-200 text-gray-900 bg-white hover:bg-gray-100 hover:text-blue-700 font-medium rounded-lg px-3 py-2" %>
  </div>
</section>
