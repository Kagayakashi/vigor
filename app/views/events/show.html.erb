<section class="flex flex-col gap-2">
  <h1>
    <%= @event.title %>
  </h1>

  <p>
    <%= l(@event.date.to_date, format: :short) %>
    <%= @event.from.to_time.strftime('%H:%M') %>
    &mdash;
    <%= @event.to.to_time.strftime('%H:%M') %>
  </p>

  <p>
    <%= @event.content %>
  </p>

  <div class="flex flex-col gap-1 py-2">
    <div class="flex gap-2 py-2">
      <%= link_to t("events.edit"), edit_event_path(@event),
        class: "text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg px-3 py-2" %>

      <%= button_to t("events.delete"), event_path(@event), method: :delete,
        class: "text-white bg-red-700 hover:bg-red-800 font-medium rounded-lg px-3 py-2" %>
    </div>

    <%= link_to t("events.events"), events_path, class: "inline-block w-fit border border-gray-200 text-gray-900 bg-white hover:bg-gray-100 hover:text-blue-700 font-medium rounded-lg px-3 py-2" %>
  </div>
</section>
