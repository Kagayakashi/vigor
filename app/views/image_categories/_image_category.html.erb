<div id="<%= dom_id image_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= image_category.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this image category", image_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this image category", edit_image_category_path(image_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
